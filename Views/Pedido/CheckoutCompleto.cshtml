@model Pedido

<div class="container">
    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompleteMessage</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Cliente:<strong>@Model.Nome</strong></p>
            <p>Data do Pedido: <strong>@Model.PedidoEnviado</strong></p>
            <p>Numero do pedido: <strong>@Model.PedidoId</strong></p>

            <table class="table">
                <tr>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th>Preco</th>
                </tr>
                @foreach(var item in Model.PedidoItens)
                {
                    <tr>
                        <td>@item.Quantidade</td>
                        <td>@item.Lanche.Nome</td>
                        <td>@item.Lanche.Preco</td>
                    </tr>
                }
            </table>

            <h4>Valor total do pedido: <strong>@(((decimal)ViewBag.TotalPedido).ToString("C2")) </strong></h4>
        </div>
    </div>
</div>
<div class="form-group" style="text-align:center">
    <h3>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Retornar</a>
    </h3>
</div>